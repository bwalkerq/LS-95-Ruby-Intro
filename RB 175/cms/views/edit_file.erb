<form action="/<%= @file_name %>" method="post">
  <label for="content">Edit content of <%= @file_name %>:</label>
  <div>
    <textarea id="content" name="content" rows="20"
              cols="100"><%= @content %></textarea>
  </div>
  <form>
    <button type="submit" value="Save Changes">
  </form>
</form>